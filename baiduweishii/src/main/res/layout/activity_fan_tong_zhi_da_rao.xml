<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzptc.sxy.baiduweishii.activity.FanTongZhiDaRao">
<android.support.v7.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_toobar"
    app:title="防通知打扰"
    app:titleTextColor="@android:color/white"
    app:navigationIcon="@mipmap/back"
    android:background="@color/color1"

    >

</android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@id/tv_toobar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <RelativeLayout
           android:visibility="gone"
           android:id="@+id/rv_relt"
           android:layout_width="match_parent"
           android:layout_height="35dp">
           <TextView
               android:id="@+id/tv_sizs"
               android:textSize="16dp"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true"
               android:text="已安装3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/rv_relt"
            android:id="@+id/re_vse"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
       <ImageView
           android:id="@+id/image_one"
           android:src="@mipmap/load_one"
           android:layout_width="1px"
           android:layout_height="1px"
           android:layout_centerInParent="true"
           />
        <ImageView
            android:id="@+id/image_tow"
            android:src="@mipmap/oz"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/tv_text"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在扫描25%"

            />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/re_view"
            android:layout_below="@id/rv_relt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>


</RelativeLayout>
