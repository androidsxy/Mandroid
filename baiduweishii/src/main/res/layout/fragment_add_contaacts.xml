<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context="com.zzptc.sxy.baiduweishii.DialogFragment.AddContaactsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_ty"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请添加紧急联系人和求救短信" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/text_ty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_add"
            android:layout_marginLeft="20dp"
            android:layout_width="320dp"
            android:maxLength="11"
            android:layout_height="wrap_content"
            android:hint="请输入手机号（最多添加三人）"
            />
        <ImageView
            android:id="@+id/image_TJ"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/add_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/button_add"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:background="@color/color1"
            android:textSize="12dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <ListView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/list_view_ha"
        android:layout_below="@id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>
    <EditText
        android:id="@+id/edit_t"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/list_view_ha"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:maxLength="40"
        android:layout_height="wrap_content"
        android:text="我遇到危险，现在不方便打电话，请帮助我。"
        />
<TextView
    android:id="@+id/text_tian"
    android:layout_below="@id/edit_t"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="320dp"
    android:text="20/40"
    />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="18dp"/>

    <CheckBox
        android:id="@+id/checkbox_haha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信通知紧急联系人我已开启一键求救"
        android:layout_above="@id/btn_complete"
        android:layout_centerHorizontal="true"
        android:button="@drawable/check_duanxin"
        android:padding="10dp"
        android:checked="true"
        android:background="@null"/>

</RelativeLayout>
